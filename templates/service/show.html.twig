{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
<div class="container">

    <h1 class="text-center">Service</h1>
    
    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>Crée à :</th>
                <td>{{ service.createdAt ? service.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    
    <a href="{{ path('service_index') }}">back to list</a>
    
    <a href="{{ path('service_edit', {'id': service.id}) }}" class="btn btn-outline-warning">Modifier</a>
    
    {{ include('service/_delete_form.html.twig') }}
</div>
{% endblock %}
